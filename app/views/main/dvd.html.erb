<h1><%= @dvd.titre %></h1>

<% @comments.each do |comment| %>
  <p><%= comment.commentaires %></p>
<% end %>
<%= form_tag "/dvd/comment", method: "post" do %>
    <textarea name="comment">
    </textarea>
    <input type="hidden" value="<%= @dvd.id %>" name="dvd" />
    <input type="submit" value="Laisser un commentaire"/>
<% end %>