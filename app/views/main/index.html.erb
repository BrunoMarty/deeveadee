<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
  <h1><%= @title %></h1>
  <p><%= @content %></p>
  <h1>Nos abonnements</h1>
  <table>
  <% @abos.each do |abo| %>
      <% if abo.id != 0 %>
      <tr>
        <td><%= abo.nom %></td>
        <td><%= abo.description %></td>
        <td><%= Societe.find(abo.societe_id).nom %></td>
      </tr>
      <% end %>
  <% end %>
  </table>
</div>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 ajouts">
  <h1>Derniers ajouts :</h1>
  <% @lastdvds.each do |dvd| %>
      <a href="/dvd/<%= dvd.id %>">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-7">
            <%= image_tag("504498.jpg") %>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-5">
            <p><%= dvd.titre %></p>
            <p><%= dvd.annee %></p>
            <p>De <%= dvd.auteur %></p>
            <p>Vu <%= dvd.consultations %> fois</p>
          </div>
        </div></a>
  <% end %>
</div>

