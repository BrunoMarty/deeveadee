<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 dvds">
  <h1><%= @title %></h1>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center page">
    <% if @page != '1' %>
        <% pagem = @page.to_i - 1 %>

        <a class="glyphicon glyphicon-backward btn btn-info" href="/dvd/page/<%= pagem %>"></a>
    <% end %>
    <span><%= "Page " + @page %></span>
    <% if  @dvds.count > 5%>
        <% pagep =  @page.to_i + 1 %>
        <a class="glyphicon glyphicon-forward btn btn-info" href="/dvd/page/<%= pagep %>"></a>
    <% end %>
  </div>
  <% @dvds.each do |dvd| %>
      <a href="/dvd/<%= dvd.id %>">
        <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
          <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7 jaquette">
            <%= image_tag("504498.jpg") %>
          </div>
          <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
            <p><%= dvd.titre %></p>
            <p><%= dvd.annee %></p>
            <p>De <%= dvd.auteur %></p>
            <p>Vu <%= dvd.consultations %> fois</p>
          </div>
        </div></a>

  <% end %>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center page">
  <% if @page != '1' %>
      <% pagem = @page.to_i - 1 %>

      <a class="glyphicon glyphicon-backward btn btn-info" href="/dvd/page/<%= pagem %>"></a>
  <% end %>
    <span><%= "Page " + @page %></span>
  <% if  @dvds.count > 5%>
      <% pagep =  @page.to_i + 1 %>
      <a class="glyphicon glyphicon-forward btn btn-info" href="/dvd/page/<%= pagep %>"></a>
  <% end %>
  </div>
</div>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
  <div class="categorie">
  <h1>Les Categories :</h1>
  <% @cats.each do |cat| %>

      <a class="btn btn-info" href="/dvd/cat/<%= cat.id %>"><%= cat.nom %></a>

  <% end %>
  </div>
  <div class="top">
  <h1>Le Top</h1>
  <% @top.each do |t| %>
      <a class="btn btn-info" href="/dvd/<%= t.id %>"><%= Dvd.find(t.id).titre %></a>
  <% end %>
  </div>
</div>