<div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
  <h1><%= @title %></h1>

  <% @dvds.each do |dvd| %>
      <a href="/dvd/<%= dvd.id %>">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-6">
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-7">
          <%= image_tag("images.png") %>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-4 col-lg-5">
          <p><%= dvd.titre %></p>
            <p><%= dvd.annee %></p>
            <p>De <%= dvd.auteur %></p>
            <p>Vu <%= dvd.consultations %> fois</p>
          </div>
        </div></a>
  <% end %>
  <% if @page != '1' %>
      <% pagem = @page.to_i - 1 %>

      <a href="/dvd/page/<%= pagem %>"><<</a>
  <% end %>
  <%= @page %>
  <% if  @dvds.count > 5%>
      <% pagep =  @page.to_i + 1 %>
      <a href="/dvd/page/<%= pagep %>">>></a>
 <% end %>
</div>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
  <h1>Les Categories :</h1>
  <% @cats.each do |cat| %>

        <a class="btn btn-info" href="/dvd/cat/<%= cat.id %>"><%= cat.nom %></a>

  <% end %>
</div>