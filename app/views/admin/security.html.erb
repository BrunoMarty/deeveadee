<h1><%= @title %></h1>
<div class="col-xs-0 col-sm-0 col-md-4 col-lg-4">
</div>
<div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
<%= form_tag "/admin/security", method: "post" do %>

    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center">
      <input class="form-control" placeholder="Nom..." type="text" name="nom"/>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center">
      <input class="form-control" placeholder="Mot de passe..." type="password" name="password"/>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 center">
      <input class="btn btn-info" type="submit" value="Se connecter"/>
    </div>


<% end %>
</div>
